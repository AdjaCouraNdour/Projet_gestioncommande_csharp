@model gestion_commande.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion</title>
    <link rel="stylesheet" href="~/css/output.css" />
</head>
<body class="bg-bleugris flex justify-center items-center h-screen">
    <div class="w-10 max-w-md bg-bleugrisclair p-6 rounded-lg shadow-lg">
        <h1 class="text-center text-2xl font-semibold text-gray-700 mb-6"> Connexion</h1>

        @if (ViewBag.Message != null)
        {
            <div class="text-red-500 text-center mb-4">
                @ViewBag.Message
            </div>
        }

        <form asp-action="Login" asp-controller="Authentification" method="post" class="space-y-4">
            <div class="flex flex-col">
                <label for="Username" class="text-semibold font-semibold text-gray-700">Username :</label>
                <input type="text" id="Username" name="Username" required class="mt-1 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-bleugris w-full max-w-xs" />
            </div>

            <div class="flex flex-col">
                <label for="Password" class="text-semibold font-semibold text-gray-700">Mot de passe :</label>
                <input type="password" id="Password" name="Password" required class="mt-1 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-bleugris w-full max-w-xs" />
            </div>

            <button type="submit" class="w-full py-2 bg-bleugris text-white font-semisemibold rounded-lg hover:bg-bleugrisclair focus:outline-none focus:ring-2 focus:ring-bleugris">
                Se connecter
            </button>
        </form>

        <div class="mt-4 text-center text-sm text-gray-600">
            <p>Vous n'avez pas de compte ? <a href="#" class="text-white font-medium hover:text-blue-600">Inscrivez-vous</a></p>
        </div>
    </div>
</body>
</html>
