@using gestion_commande.Models
@model Livreur

@{
    ViewData["Title"] = "Créer un Utilisateur";
    
}

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg">
    <div class="bg-gray-800 text-white text-lg font-bold p-4 rounded-t-lg">Création Utilisateur</div>
    <div class="p-6">

        <form asp-action="FormLivreur" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-2">
                <label for="NomComplet" class="block text-black text-sm font-bold mb-2" asp-for="NomComplet">NomComplet</label>
                <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-500" asp-for="NomComplet" />
                <span class="text-red-500 text-xs italic" asp-validation-for="NomComplet"></span>
            </div>
            <div class="mb-2">
                <label for="Email" class="block text-black text-sm font-bold mb-2" asp-for="Email">Email</label>
                <input type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-500" asp-for="Email" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Email"></span>
            </div>
            <div class="mb-2">
                <label for="Telephone" class="block text-black text-sm font-bold mb-2">Téléphone</label>
                <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-500" asp-for="Telephone" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Telephone"></span>
            </div>
        
            <div class="flex justify-end">
                <button class="bg-bleugris text-white font-bold py-2 px-4 rounded hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-400" type="submit">Soumettre</button>
            </div>
        </form>
    </div>
</div>
